<yas>

  <scene root="scene1" axis_length="5.0" />

  <views default="persp">
    <perspective id="persp" near="0.1" far="500" angle="0.4">
      <from x="15.0" y="15.0" z="15.0" />
      <to x="0.0" y="0.0" z="0.0" />
    </perspective>

    <ortho id="ortho" near="0.1" far="1000"
                      left="25.0" right="25.0"
                      top="25.0" bottom="25.0" />
  </views>

  <ambient>
    <ambient r="0.7" g="0.4" b="0.3" a="1.0" />
    <background r="0.2" g="0.6" b="0.5" a="1.0" />
  </ambient>

  <lights>
    <omni id="light0" enabled="1">
      <location x="3.5" y="15.0" z="3.5" w="0.0" />
      <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
      <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
      <specular r="0.7" g="0.7" b="0.7" a="1.0" />
    </omni>

    <spot id="light1" enabled="0" angle="14.0" exponent="20.0">
      <location x="15.0" y="5.0" z="15.0" w="0.0" />
      <target x="0.0" y="0.0" z="0.0" />
      <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
      <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
      <specular r="0.5" g="0.5" b="0.5" a="1.0" />
    </spot>
  </lights>

  <textures>
    <texture id="leaves" file="/scenes/images/leaves.jpg" />
  </textures>

  <materials>
    <material id="material0" shininess="1.0">
      <emission r="1.0" g="1.0" b="1.0" a="1.0" />
      <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </material>
  </materials>

  <transformations>
    <transformation id="transform0">
      <translate x="0" y="0" z="8"/>
      <rotate axis="y" angle="-180"/>
      <scale x="8" y="5" z="1"/>
    </transformation>
  </transformations>

  <primitives>
    <primitive id="square">
      <rectangle x1="12" y1="12" x2="21" y2="12" />
    </primitive>
    <primitive id="circle">
      <circle slices="10" />
    </primitive>
    <primitive id="triangle">
        <triangle x1="1" y1="0" z1="0"
                x2="-0.5" y2="0.866" z2="0"
                x3="-0.5" y3="-0.866" z3="0"/>
    </primitive>
  </primitives>

  <components>
    <component id="floor">
        <transformation>
            <rotate axis="y" angle="90"/>
            <translate x="0" y="0" z="0.5"/>
        </transformation>
        <materials>
            <material id ="material0"/>
        </materials>
        <texture id="leaves" length_s="1" length_t="1"/>
        <children>
            <primitiveref id="square"/>
        </children>
    </component>

  </components>
</yas>
